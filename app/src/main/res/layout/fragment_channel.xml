<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ChannelFragment"
    >

    <include
        android:id="@+id/channelAppLayout"
        layout="@layout/app_layout" />

    <ImageView
        android:id="@+id/profileImage"
        android:layout_width="103dp"
        android:layout_height="111dp"
        android:layout_marginTop="707dp"
        android:layout_marginBottom="568dp"
        android:src="@mipmap/profile_icon"
        app:layout_constraintBottom_toBottomOf="@+id/channelAppLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.146"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/channelAppLayout"
        app:layout_constraintVertical_bias="0.929"></ImageView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Channel Name"
        app:layout_constraintStart_toEndOf="@id/profileImage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/profileImage"
        app:layout_constraintBottom_toBottomOf="@id/profileImage"
        android:textSize="18sp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="@color/app_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.32"
        tools:layout_editor_absoluteX="0dp"
        android:outlineAmbientShadowColor="@color/text_color_in_app_color"/>

</androidx.constraintlayout.widget.ConstraintLayout>