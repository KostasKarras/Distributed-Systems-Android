<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/Thumbnail"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:src="@mipmap/ic_launcher"
            android:layout_margin="10dp" />

        <LinearLayout
            android:id="@+id/linearLayoutInside"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/videoTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Title"
                android:textSize="20sp"
                android:layout_weight="0.5" />

            <TextView
                android:id="@+id/hashtags"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hashtags"
                android:textSize="16sp"
                android:layout_weight="0.5" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/AddHashtag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/ic_add_hashtag"
            android:text="Add Hashtag"
            android:textColor="@color/app_color"
            android:textSize="16sp"
            android:textAlignment="center"
            android:layout_weight="0.33"
            android:onClick="AddHashtag" />

        <TextView
            android:id="@+id/RemoveHashtag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/ic_remove_hashtag"
            android:text="Remove Hashtag"
            android:textColor="@color/app_color"
            android:textSize="16sp"
            android:textAlignment="center"
            android:layout_weight="0.33"
            android:onClick="RemoveHashtag" />

        <TextView
            android:id="@+id/DeleteVideo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/ic_delete_video"
            android:text="Delete Video"
            android:textColor="@color/app_color"
            android:textSize="16sp"
            android:textAlignment="center"
            android:layout_weight="0.33"
            android:onClick="DeleteVideo" />

    </LinearLayout>

</LinearLayout>